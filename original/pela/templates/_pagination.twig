<!-- begin pagination -->
<nav class="pagination" aria-label="{{ 'pagination' | lang }}">
  <div class="container">
    <div class="pagination__inner">
      <div class="pagination__list">

        <a title="{{ 'previous_page' | lang }}" class="pagination__prev{% if not _pagination.page_prev %} disabled{% endif %}" href="{{ _pagination.page_prev | pagination_page_url }}">
          <i>{{ icon('ionicons', 'chevron-back', 12) }}</i> {{ 'previous_page' | lang }}
        </a>

        <span class="pagination__count">{{ 'page' | lang }} {{ _pagination.page }} {{ 'of' | lang }} {{ _pagination.pages }}</span>

        <a title="{{ 'next_page' | lang }}" class="pagination__next{% if not _pagination.page_next %} disabled{% endif %}" href="{{ _pagination.page_next | pagination_page_url }}">
          {{ 'next_page' | lang }} <i>{{ icon('ionicons', 'chevron-forward', 12) }}</i>
        </a>

      </div>
    </div>
  </div>
</nav>
<!-- end pagination -->