{% extends '@base.twig' %}

{% block body %}
    <header class="blog-header">
        <div class="inner">
            <div class="archive archive-tag box archive-box">
                <span class="archive-info">
                    <span class="archive-type">{{ 'topic' | lang }}</span>
                    <span class="archive-count">
                        {{ _pagination.total | lang_by_number(
                            zero="posts_num_zero",
                            one="posts_num_one",
                            multi="posts_num_multi"
                        ) }}
                    </span>
                </span>
                <h2 class="archive-title">{{ _tag.name }}</h2>
                {% if _tag.description %}
                    <span class="archive-description">{{ _tag.description }}</span>
                {% endif %}
            </div>
        </div>
    </header>

    <div id="index" class="container">

        <main class="content" role="main">
            {%  include '_loop.twig' %}
        </main>

    </div>
{% endblock %}