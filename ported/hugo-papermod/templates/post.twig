{% extends '@base.twig' %}

{% block body %}

<main class="main">

    <article class="post-single">

        <header class="post-header">
            <div class="breadcrumbs">
                <a href="{{ _blog.url }}">{{ 'home' | lang }}</a>&nbsp;»&nbsp;
                {% if (_config.settings.post.tags) %}
                {% for tag in _post.tags %}
                <a href="{{ tag.url }}">{{ tag.name }}</a>&nbsp;»&nbsp;
                {% endfor %}
                {% endif %}
                {{ _post.title }}
            </div>
            <h1 class="post-title">{{ _post.title }}</h1>
            <div class="post-description">
                {{ _post.description }}
            </div>
            <div class="post-meta"><span title="{{ post.published_at | format_date('long', locale=_lang.code)}}">{{ post.published_at | format_date('long', locale=_lang.code)}}</span>&nbsp;·&nbsp;
            {% if (_config.settings.loop.authors) %}
                {% for author in _post.authors %}
                    <a href="{{ author.url }}">{{ author.name }}</a>
                {% endfor %}
            {% endif %}
            &nbsp;|&nbsp;{{ 'translations' | lang }}:
            <ul class="i18n_list">
                <li>
                    {% for variant in _post.variants %}
                        <a href="{{ variant.url }}">
                            {{ variant.language.name }}
                        </a>
                        {% if not loop.last %}&nbsp;&bull;&nbsp;{% endif %}
                    {% endfor %}
                </li>
            </ul>
            </div>
        </header>

        <div class="post-content">
            {{ _post.content | raw }}
        </div>

    </article>

</main> 

{% endblock %}